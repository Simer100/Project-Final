            <div class="order-1">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-md-2">@Html.LabelFor(model => model.DateOfBirth)</div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2"> @Html.LabelFor(model => model.JoiningDate)</div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.JoiningDate, new { htmlAttributes = new { @class = "form-control" } })
